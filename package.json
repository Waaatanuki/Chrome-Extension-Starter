{
  "name": "chrome-extension-starter",
  "type": "module",
  "version": "0.0.0",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "dev": "vite --port 1234 --open",
    "build": "run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts && vite build --config vite.config.inject.mts",
    "zip": "esno scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@iconify-json/carbon": "^1.1.35",
    "@types/archiver": "^6.0.2",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.2",
    "@unocss/eslint-config": "^0.61.0",
    "@unocss/reset": "^0.61.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vueuse/core": "^10.11.0",
    "@vueuse/shared": "^10.11.0",
    "archiver": "^7.0.1",
    "dayjs": "^1.11.11",
    "element-plus": "^2.7.5",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "fast-glob": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "rimraf": "^5.0.7",
    "sass": "^1.77.5",
    "taze": "^0.13.8",
    "typescript": "^5.4.5",
    "unocss": "^0.61.0",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.3.0",
    "vue": "^3.4.27",
    "webext-bridge": "^6.0.1"
  }
}
