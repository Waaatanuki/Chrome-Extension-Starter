{
  "name": "chrome-extension-starter",
  "type": "module",
  "version": "0.0.0",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "dev": "vite --port 1234 --open",
    "build": "run-s clear build:web build:prepare build:js",
    "build:prepare": "tsx scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts && vite build --config vite.config.inject.mts",
    "zip": "tsx scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@iconify-json/carbon": "^1.2.8",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.0.313",
    "@types/node": "^22.14.0",
    "@unocss/eslint-config": "^66.0.0",
    "@unocss/reset": "^66.0.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vueuse/core": "^13.1.0",
    "@vueuse/shared": "^13.1.0",
    "archiver": "^7.0.1",
    "dayjs": "^1.11.13",
    "element-plus": "^2.9.7",
    "eslint": "^9.24.0",
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "rimraf": "^6.0.1",
    "typescript": "5.7.3",
    "unocss": "^66.0.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.4.1",
    "vite": "^6.2.5",
    "vue": "^3.5.13",
    "webext-bridge": "^6.0.1"
  }
}
