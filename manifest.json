{
  "manifest_version": 3,
  "name": "chrome-extension-starter",
  "version": "0.0.1",
  "description": "chrome-extension-starter",
  "icons": {
    "16": "./assets/logo.png",
    "48": "./assets/logo.png",
    "128": "./assets/logo.png"
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "sidePanel",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "vite-vue3-chrome-extension-starter",
    "default_popup": "src/views/popup/main.html",
    "default_icon": {
      "16": "./assets/logo.png",
      "48": "./assets/logo.png",
      "128": "./assets/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.mjs"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "src/views/options/main.html",
  "devtools_page": "src/views/devtools/main.html",
  "side_panel": {
    "default_path": "src/views/sidepanel/main.html"
  }
}
